﻿@using LibraryManagement.Models
@model IEnumerable<SACH>
<div class="hot-deals-product new-product-2 pb-60">
    <div class="container">
        <div class="fb-product_list_nav">
            <div class="row">
                <div class="col-lg-12">
                    <div class="fb-section_title">
                        <h2>Sách mới tại thư viện</h2>
                    </div>
                    <div class="fb-product_wrap bg-white mt-sm-60 mt-xs-60">
                        <div class="new-product_active-2 owl-carousel">
                            @foreach (var item in Model)
                            {
                                <div class="single-product">
                                    <div class="product-img">
                                        <a href="@Url.Action("BookDetail", "BookDetail", new {maTheLoai = item.MATHELOAI, maNhaXuatBan = item.MANHAXUATBAN, maSach = item.MASACH, @tensp = item.TENSACH })">
                                            <img class="primary-img" src="@Url.Content("~/assets/Admin/imgs/Product/" + item.HINHANH)"
                                                 alt="FB'S Prduct">
                                        </a>
                                        <div class="sticker"><span>New</span></div>
                                    </div>
                                    <div class="product-content">
                                        <h3 class="product-name">
                                            <a href="@Url.Action("BookDetail", "BookDetail", new {maTheLoai = item.MATHELOAI, maNhaXuatBan = item.MANHAXUATBAN, maSach = item.MASACH, @tensp = item.TENSACH })" class="product-name-link">@item.TENSACH</a>
                                        </h3>
                                        <div class="product-action">
                                            <ul class="product-action-link">
                                                @if (Session["TaiKhoan"] != null)
                                                {
                                                    <li class="shopping-cart_link"> <a href="">@Ajax.ActionLink(" ", "CreateCartAjax", "Cart", new { @idBook = item.MASACH, @strULR = Request.Url.ToString() }, ajaxOptions: new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "AjaxCart", InsertionMode = InsertionMode.Replace }, htmlAttributes: new { @class = "ion-bag my-icon" })</a> </li>
                                                }
                                                <li class="single-product_link">
                                                    <a href="@Url.Action("BookDetail", "BookDetail", new {maTheLoai = item.MATHELOAI, maNhaXuatBan = item.MANHAXUATBAN, maSach = item.MASACH, @tensp = item.TENSACH })"
                                                       title="Single Product">
                                                        <i class="ion-link"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
