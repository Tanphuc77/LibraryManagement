@using LibraryManagement.Models
@using PagedList.Mvc
@model PagedList.IPagedList<SACH>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Layout/UserHome.cshtml";
}
<header class="header-2 bg-white">
    @Html.Partial("~/Views/Layout/Header-top-User.cshtml")
    @Html.Partial("~/Views/Layout/Header-middle-User.cshtml")
    @Html.Action("Menu", "Home")
</header>
<div class="body-wrapper" id="SearchAjax">
    @Html.Action("Navbar", "Home")
    @Html.Action("NewBook", "Home")
    <div class="content-wraper" style="margin-bottom:30px">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop-top-bar mt-25">
                        <div class="shop-bar-inner">
                            <div class="product-view-mode">
                                <ul class="nav shop-item-filter-list" role="tablist">
                                    <li class="active" role="presentation">
                                        <a aria-selected="true"
                                           class="active show" data-bs-toggle="tab" role="tab"
                                           aria-controls="grid-view" href="#grid-view"><i class="fa fa-th"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="toolbar-amount">
                                <span>Có @Model.Count() Sách</span>
                            </div>
                        </div>
                    </div>
                    <div class="shop-products-wrapper bg-white mt-30 pb-60 pb-sm-30">
                        <div class="tab-content">
                            <div id="grid-view" class="tab-pane fade active show" role="tabpanel">
                                <div class="fb-product_wrap shop-product-area">
                                    <div class="row">
                                        @Html.Partial("~/Views/Home/BookPartial.cshtml")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="paginatoin-area" style="margin-top:0">
                        <div class="row">
                            <div class="col-lg-8 col-md-6">
                                <p></p>
                            </div>
                            <div class="col-lg-4 col-md-6" style="box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);">
                                <ul class="pagination-box pt-xs-20 pb-xs-15">
                                    <li>
                                        @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                                    </li>
                                    <li style="float:right">@Html.PagedListPager(Model, Page => @Url.Action("Index", new { Page = Page }))</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Layout/Footer-User.cshtml")
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

