﻿@using LibraryManagement.Models
@{
    ViewBag.Title = "TaiKhoanCuaToi";
    Layout = "~/Views/Layout/UserHome.cshtml"; ;
    DOCGIA User = (DOCGIA)Session["TaiKhoan"];
}
<header class="header-2 bg-white">
    @Html.Partial("~/Views/Layout/Header-top-User.cshtml")
    @Html.Partial("~/Views/Layout/Header-middle-User.cshtml")
    @Html.Action("Menu", "Home")
</header>
<div class="page-section pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="offset-lg-2 col-lg-8 col-md-12 col-12">
                <form action="#">
                    <div class="login-form" style=" box-shadow: 0px 5px 4px 0px rgba(0, 0, 0, 0.4);">
                        <div class="row">
                            <div class="col-md-6 col-12 mb-20">
                                <label>Mã sinh viên</label>
                                <input class="mb-0" type="text" value="@User.MASINHVIEN">
                            </div>
                            <div class="col-md-6 col-12 mb-20">
                                <label>Họ và tên</label>
                                <input class="mb-0" type="text" value="@User.HOTEN">
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Giới tính</label>
                                <input class="mb-0" type="text" value="@User.GIOITINH">
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Email</label>
                                <input class="mb-0" type="text" value="@User.EMAIL">
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Số điện thoại</label>
                                <input class="mb-0" type="text" value="@User.DIENTHOAI">
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Trạng thái</label>
                                <input class="mb-0" type="text" value="Đang sử dụng">
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Tài khoản</label>
                                <input class="mb-0" type="text" value="@User.USERNAME">
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Lớp</label>
                                <input class="mb-0" type="text" value="@User.LOP.TENLOP">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Layout/Footer-User.cshtml")

