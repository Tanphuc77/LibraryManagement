@using LibraryManagement.Models
@model DOCGIA
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout/UserHome.cshtml";
}
<header class="header-2 bg-white">
    @Html.Partial("~/Views/Layout/Header-top-User.cshtml")
    @Html.Partial("~/Views/Layout/Header-middle-User.cshtml")
    @Html.Action("Menu", "Home")
</header>
<div class="page-section pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="offset-lg-3 col-lg-6 col-md-12 col-12">
                <div class="login-form">
                    <h4 class="login-title">Đổi mật khẩu</h4>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-12 mb-20">
                                @Html.LabelFor(model => model.OldPassword)
                                <input type="password" name="OldPassword" placeholder="Mật khẩu cũ">
                                @Html.ValidationMessageFor(model => model.OldPassword, null, new { @class = "text-danger validation" })
                            </div>
                            <div class="col-12 mb-20">
                                <label>Mật khẩu mới</label>
                                @Html.Password("PASSWORD", null, new { placeholder = "Mật khẩu mới" })
                            </div>

                            <div class="col-12 mb-20">
                                <label>Nhập lại mật khẩu mới</label>
                                @Html.Password("ConfirmPassword", null, new { placeholder = "Nhập lại mật khẩu mới" })
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="register-button mt-0">Thay đổi mật khẩu</button>
                            </div>
                            @if (TempData["NoMatch"] != null)
                            {
                                <script>
                                    alert("@Html.Raw(TempData["NoMatch"])");
                                </script>
                            }
                            @if (TempData["WrongPassword"] != null)
                            {
                                <script>
                                    alert("@Html.Raw(TempData["WrongPassword"])");
                                </script>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Layout/Footer-User.cshtml")
<style>
    .register-button {
        width: 100%;
        height: 100%;
        padding: 7px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #363f4d;
        transition: background-color 0.3s ease;
    }

        .register-button:hover {
            background-color: #e23e57;
        }
</style>

